<% layout("layouts/boilerplate") %>

  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: center; /* center the whole row */
      gap: 1rem;
      padding-top: 1rem;
    }

    .filter {
      text-align: center;
      margin: 0.9rem; /* small spacing around each coin */
      opacity: 0.9;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }

    .filter p {
      font-size: 0.85rem;
      margin: 0;
      color: var(--text);
    }

    /* coin-like icon container */
    .filter > div {
      width: 3.2rem;
      height: 3.2rem;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(0,0,0,0.04);
      box-shadow: 0 6px 18px rgba(15,23,42,0.06);
      transition: ease, transform 500ms ease, color 500ms ease;
    }

    .filter > div i {
      font-size: 1.1rem;
      color: var(--accent);
    }

    .filter:hover > div {
      transform: translateY(-6px);
      background: linear-gradient(90deg,var(--accent-2),var(--accent));
    }

    .filter:hover > div i {
      color: #fff;
    }

    /* tax toggle removed: tax info will be shown by default */
  </style>


  <div id="filters">
