<% layout("layouts/boilerplate") %>

    <div class="row mt-3 auth-row">
         <h1 class="col-6 offset-3 auth-title"> SignUp to WanderLust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="auth-form">
                <div class="mb-3">
                    <label for="username" class="form-label">Username
                    </label>
                    <input id="Username" name="username" type="text" class="form-control" required />
                    <div class="valid-feedback"> looks good</div>
                    <div class="invalid-feedback">Add Title</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email
                    </label>
                    <input id="email" name="email" type="email" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password
                    </label>
                    <div class="input-group">
                        <input id="password" name="password" type="password" class="form-control" required />
                        <button class="btn btn-outline-secondary password-toggle-btn" type="button" aria-label="Show password" aria-pressed="false">
                            <i class="fa-regular fa-eye" aria-hidden="true"></i>
                        </button>
                    </div>
                    <div class="invalid-feedback">password required</div>
                </div>

                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>